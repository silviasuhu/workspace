{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Jira summary",
            "type": "shell",
            "command": "mon_repoSummary.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Show current branch Jira info",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        },
        {
            "label": "Build compiledb",
            "type": "shell",
            "command": ".venv/bin/python3 bazel build compiledb"
        },
        {
            "label": "Sync changes to WS",
            "type": "shell",
            "command": "sync_repo_with_ws.sh",
            "problemMatcher": []
        },
        {
            "label": "Sync changes to WS (skipping Git)",
            "type": "shell",
            "command": "sync_repo_with_ws.sh --skip-git",
            "problemMatcher": []
        }
    ]
}